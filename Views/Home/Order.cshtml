@model UserOrderViewModel

<div class="text-center">
    <h1>Place your order </h1>
</div>
<hr />

<div class="container">
    <div class="row">
        <partial name="_CartPartial" model="ViewBag.Cart" />
    </div>
    <div class="text-center">
        <h3>Personal informations</h3>
    </div>
    <div class="row">
        <form method="post" asp-controller="Home" asp-action="CreateOrder">
            <input type="hidden" name="TotalPrice" value="@ViewBag.TotalPrice.ToString("0.00")" />
            <div class="row">
                <div class="col-6">
                    <label class="control-label" asp-for="OrderAddress.BillingFirstName"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingFirstName" />
                </div>
                <div class="col-6">
                    <label class="control-label" asp-for="OrderAddress.BillingLastName"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingLastName" />
                </div>

            </div>

            <div class="row">
                <div class="col-6">
                    <label class="control-label" asp-for="OrderAddress.BillingEmail"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingEmail" />
                </div>
                <div class="col-6">
                    <label class="control-label" asp-for="OrderAddress.BillingPhone"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingPhone" />
                </div>

            </div>

            <div class="row">
                <div class=" col-12">
                    <label class="control-label" asp-for="OrderAddress.BillingAddress"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingAddress" />
                </div>
            </div>

            <div class="row">
                <div class="col-5">
                    <label class="control-label" asp-for="OrderAddress.BillingCity"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingCity" />
                </div>
                <div class="col-4">
                    <label class="control-label" asp-for="OrderAddress.BillingCountry"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingCountry" />
                </div>
                <div class="col-3">
                    <label class="control-label" asp-for="OrderAddress.BillingZip"></label>
                    <input class="form-control" asp-for="OrderAddress.BillingZip" />
                </div>

            </div>

            <div class="row">
                <div class="col-12 form-group">
                    <label class="control-label" asp-for="Message"></label>
                    <textarea class="form-control" asp-for="Message" rows="3" cols="50"></textarea>
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-success float-end" value="Place order" />
                </div>
            </div>
            
        </form>
    </div>
</div>