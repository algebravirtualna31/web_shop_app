@model IEnumerable<web_shop_app.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="row mb-5">
    <div class="col-2">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropDownMenuButton" data-bs-toggle="dropdown">
                Filter by category
            </button>
            <div class="dropdown-menu">
                @foreach (var category in ViewBag.Categories)
                {
                    <a class="dropdown-item" asp-action="Products" asp-route-categoryId="@category.Id">@category.Title</a>
                }
            </div>
        </div>
    </div>
    <div class="col-2">
        <a asp-action="Products" class="btn btn-warning">Reset filter</a>
    </div>
</div>
<div class="row mt-3">
    @foreach (var item in Model)
    {
        <div class="col-4 mt-3">
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="card-title">@item.Title</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Price @item.Price €</p>
                </div>
                <div class="card-footer">
                    <form method="post" asp-controller="Cart" asp-action="AddToCart">
                        <input type="hidden" name="selectedQuantity" value="1" />
                        <input type="hidden" name="productId" value="@item.Id" />
                        <input type="submit" class="btn btn-success btn-sm" value="Add to cart" />
                    </form>
                </div>
            </div>
        </div>
    }
</div>
